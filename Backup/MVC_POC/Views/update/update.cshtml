@model IEnumerable<MVC_POC.Models.updateModal>


@{
    ViewBag.Title = "update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>update</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Details", "update"))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>updateModal</legend>
        <table>
            <tr>
                <td>@Html.DropDownList("fstnme") </td>
                <td>@Html.DropDownList("lstnme") </td>
               
                <td><input type="submit" value="Search" /></td>
            </tr>

        </table>       
    </fieldset>
}

<div>
    @if(Model != null)
    {
   <table align:"center">
    <tr>

        <th>ID</th><th>First Name</th><th>Last Name</th><th>Age</th><th>DOB</th><th>Address</th><th>Country</th><th>State</th><th>Gender</th>
    </tr>

    @foreach(var item in Model)
    {
        
        <tr>
         <td>@Html.DisplayFor(modelItem=>item.Id) </td>
        <td>@Html.DisplayFor(modelItem=>item.FstName)</td>
        <td>@Html.DisplayFor(modelItem=>item.LstName)</td>
        <td>@Html.DisplayFor(modelItem=>item.Age)</td>
        <td>@Html.DisplayFor(modelItem=>item.Dob)</td>
        <td>@Html.DisplayFor(modelItem=>item.Address)</td>
        <td>@Html.DisplayFor(modelItem=>item.Country)</td>
        <td>@Html.DisplayFor(modelItem=>item.State)</td>
        <td>@Html.DisplayFor(modelItem=>item.Gender)</td>
        <td>@Html.ActionLink("Edit", "Edit", new {id = item.Id }) </td>
        </tr>
        
    }

</table>

    }

</div>
